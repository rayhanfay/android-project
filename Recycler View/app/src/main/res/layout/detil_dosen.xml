<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_marginTop="16dp"
        android:text="@string/judul"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/foto_detil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nama_detil_dosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/nama"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/nip_detil_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="NIP: "
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/kompetensi_detil_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kompetensi: "
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/mk_detil_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mata Kuliah: "
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/ruangan_detil_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ruangan: "
            android:textSize="16sp"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>